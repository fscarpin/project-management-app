<%- model_class = Project -%>
<div class="page-header">
  <h3><%=@project.title%></h3>
  <h3><small>Organization: <%= tenant_name(@project.tenant_id) %></small></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @project.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @project.details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expected_completion_date) %>:</strong></dt>
  <dd><%= @project.expected_completion_date %></dd>
</dl>

<%= link_to "< Back to Home", root_path, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_tenant_project_path(tenant: @tenant, project: @project), :class => 'btn btn-warning' %>
<%= link_to "Delete",
              tenant_project_path(tenant: @tenant, project: @project),
              :method => 'delete',
              :data => { :confirm => "Are you sure you want to delete this project?" },
              :class => 'btn btn-danger' %>
